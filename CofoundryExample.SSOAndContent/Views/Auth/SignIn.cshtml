@model CofoundryExample.SSOAndContent.SignInViewModel
@inject ICofoundryHelper Cofoundry

<h2>Sign In</h2>

@if (Model.Content == null)
{
    <p>
        This is some default Sign in content. Please <a href="/admin/">log in</a> to customize.
    </p>
}
else
{
    @Cofoundry.Sanitizer.Sanitize(Model.Content)
}

<form method="post">
    <div>
        <input name="Email"
               placeholder="Email" 
               type="email" 
               required />
    </div>
    <div>
        <input name="Password"
               placeholder="Password" 
               type="password" 
               required />
    </div>

    <input type="submit" value="Sign In" />
</form>

